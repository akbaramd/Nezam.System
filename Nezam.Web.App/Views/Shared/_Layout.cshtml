<!doctype html>
<html dir="rtl" lang="fa" data-layout="horizontal" data-topbar="dark" data-sidebar-size="lg" data-sidebar="light" data-sidebar-image="none" data-preloader="disable">

<head>
    <partial name="~/Views/Shared/_title_meta.cshtml"/>
    @RenderSection("styles", required: false)
    <partial name="~/Views/Shared/_head_css.cshtml"/>
</head>
<body lang="fa">
    <!-- Begin page -->
    <div id="layout-wrapper">
        <partial name="~/Views/Shared/_menu.cshtml"/>

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">
                    <partial name="~/Views/Shared/_page_title.cshtml"/>

                    @RenderBody()
                </div>
            </div>
            <partial name="~/Views/Shared/_footer.cshtml"/>
        </div>

    </div>
    <!-- END layout-wrapper -->
    <partial name="~/Views/Shared/_customizer.cshtml"/>

    <partial name="~/Views/Shared/_vendor_scripts.cshtml"/>

    @RenderSection("scripts", required: false)
</body>
</html>